[languages]
# the result of each command should yield a list of filenames matching a given filetype
c  = rg --files -t c  /usr/lib
go = rg --files -t go /usr/lib/go
js = rg --files -t js /usr/lib
py = rg --files -t py /usr/lib
sh = rg --files -t sh /usr/lib

# these can be uncommented if the paths exist on your system
# lua = rg --files -t lua ~/.local/share/nvim/lazy
# rs = rg --files -t rust ~/.cargo
